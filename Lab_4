#include <iostream>
#include <string>
using namespace std;
#include <cmath>
#include <iomanip>
int main()
{
  bool answer;
  int value;
  
  cout <<"Enter value: ";
  cin >> value;
  
 answer = 
    (value < 1 && (value >= 0 && value != 10)) ||
    (value * 2 < 20 && value - 2 > -2) ||
    (value - 1 > 1 && value / 2 < 10) ||
    (value == 111);
    
 cout << (answer ? "THAT'S TRUE :)" : "THAT'S NOT TRUE :(") << endl;
  
  ////////////////////////////////////////6///////////////////////////////////
  
  
  double a,b,c,d,f;
  
  cout<<"Enter five values: ";
  cin>> a >> b >> c >> d >> f ;
  
  cout << a << endl;
  cout << fixed << setprecision(2) << b << endl;
  cout.unsetf(ios :: fixed);
  cout << setprecision(6) <<c <<endl;
  cout << fixed << setprecision(2) << d << endl;
  cout.unsetf(ios::fixed);
  cout << setprecision(0) <<f <<endl;
  
  //////////////////////////////////////7////////////////////////////////////
  
  int num1,num2;
  
   const double EPSILON = 0.000001;
   
   cout << "Enter two integer numbers: ";
    cin >> num1>>num2;
    
    if(num1 ==0 || num2==0){
         cout << "Division by zero is not allowed." << endl;
        return 1;
        
        }
        
         double result1 = 1.0 / num1;
         double result2 = 1.0 / num2;
         
         cout << "1 / " << num1 << " = " << result1 << endl;
         cout << "1 / " << num2 << " = " << result2 << endl;
          
          
         if (fabs(result1 - result2) < EPSILON) {
            cout << "The results are approximately equal." << endl;
        } else {
            cout << "The results are different." << endl;
        }
    
    ////////////////////////////////////////////8//////////////////////////////////
    
    int first, second, third, forth;

    cout << "Enter first part of IP:" << endl;
    cin >> first;

    cout << "Enter second part of IP:" << endl;
    cin >> second;

    cout << "Enter third part of IP:" << endl;
    cin >> third;

    cout << "Enter forth part of IP:" << endl;
    cin >> forth;
if(first >= 0 && first <= 255 && second >= 0 && second <= 255 && third >= 0 && third <= 255 && forth >= 0 && forth <= 255){
            
    cout << "The IP address is: "
         << first << "."
         << second << "."
         << third << "."
         << forth << endl;
    } else{
        cout << "Erorr"<<endl;
        }
    
   


  return 0;
}
